<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.reductivetech.taskclarity"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <application android:theme="@style/CustomActionBarTheme"
                 android:label="@string/app_name">
        <activity android:name="com.reductivetech.taskclarity.MainActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.reductivetech.taskclarity.settings.SettingsActivity"/>
        <activity android:name="com.reductivetech.taskclarity.settings.AccountsActivity"/>
    </application>
</manifest>
